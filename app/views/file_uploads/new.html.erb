<h1 class="header">Upload New File</h1>

<div class="form-container">
  <%= form_with model: @file_upload, local: true, html: { class: "upload-form" } do |f| %>
    <div class="form-group">
      <%= f.label :title, "File Title", class: "form-label" %>
      <%= f.text_field :title, required: true, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :description, "File Description", class: "form-label" %>
      <%= f.text_area :description, required: true, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :file, "Select File", class: "form-label" %>
      <%= f.file_field :file, required: true, class: "form-input" %>
    </div>
<br>
    <div class="form-group">
      <%= f.submit "Upload File", class: "btn btn-primary" %>
    </div>
  <% end %>
<br>
  <%= link_to "Back to Files", file_uploads_path, class: "btn btn-secondary" %>
</div>
